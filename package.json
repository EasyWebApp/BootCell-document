{
    "name": "bootcell-document",
    "version": "0.16.0",
    "description": "Re-implemented Official Document site of BootStrap & FontAwesome based on WebCell, BootCell & MarkCell",
    "dependencies": {
        "boot-cell": "^1.0.0-beta.7",
        "cell-router": "^2.0.0-rc.7",
        "classnames": "^2.2.6",
        "lodash.groupby": "^4.6.0",
        "mobx": "^5.15.4",
        "mobx-web-cell": "^0.2.5",
        "web-cell": "^2.0.0-rc.20",
        "web-utility": "^0.11.2"
    },
    "devDependencies": {
        "@types/classnames": "^2.2.10",
        "@types/lodash.groupby": "^4.6.6",
        "husky": "^4.2.3",
        "less": "^3.11.1",
        "lint-staged": "^10.0.8",
        "mark-cell": "^0.3.0",
        "parcel": "^1.12.4",
        "prettier": "^1.19.1",
        "typescript": "^3.8.3"
    },
    "prettier": {
        "singleQuote": true,
        "tabWidth": 4
    },
    "lint-staged": {
        "*.{html,md,mdx,less,json,yml,ts,tsx}": [
            "prettier --write"
        ]
    },
    "scripts": {
        "test": "lint-staged",
        "pack-mdx": "rm -rf document/dist/  &&  mark-cell document/source -p web-cell -f createCell",
        "pack-tsx": "rm -rf dist/  &&  parcel build source/index.html --public-url .",
        "build": "npm run pack-mdx  &&  npm run pack-tsx",
        "start": "npm run pack-mdx  &&  rm -rf dist/  &&  parcel source/index.html --open"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm test",
            "pre-push": "npm run build"
        }
    }
}
