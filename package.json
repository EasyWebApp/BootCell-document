{
    "name": "bootcell-document",
    "version": "0.5.0",
    "description": "Re-implemented Official Web-site of BootStrap based on WebCell, BootCell & MarkCell",
    "dependencies": {
        "boot-cell": "^0.28.0",
        "cell-router": "^2.0.0-rc.6",
        "classnames": "^2.2.6",
        "lodash.groupby": "^4.6.0",
        "mobx": "^5.15.4",
        "mobx-web-cell": "^0.2.5",
        "web-cell": "^2.0.0-rc.18"
    },
    "devDependencies": {
        "@types/lodash.groupby": "^4.6.6",
        "autoprefixer": "^9.7.4",
        "husky": "^4.2.1",
        "less": "^3.10.3",
        "lint-staged": "^10.0.7",
        "mark-cell": "^0.2.3",
        "parcel": "^1.12.4",
        "postcss-modules": "^1.5.0",
        "prettier": "^1.19.1",
        "typescript": "^3.7.5"
    },
    "postcss": {
        "modules": true,
        "plugins": {
            "autoprefixer": {
                "grid": true
            }
        }
    },
    "prettier": {
        "singleQuote": true,
        "tabWidth": 4
    },
    "lint-staged": {
        "*.{html,md,mdx,less,json,yml,ts,tsx}": [
            "prettier --write"
        ]
    },
    "scripts": {
        "test": "lint-staged",
        "pack-mdx": "rm -rf document/dist/  &&  mark-cell document/source -p web-cell -f createCell",
        "pack-tsx": "rm -rf dist/  &&  parcel build source/index.html --public-url .",
        "build": "npm run pack-mdx  &&  npm run pack-tsx",
        "start": "npm run pack-mdx  &&  rm -rf dist/  &&  parcel source/index.html --open"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm test",
            "pre-push": "npm run build"
        }
    }
}
