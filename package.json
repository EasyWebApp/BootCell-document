{
    "name": "bootcell-document",
    "version": "1.0.0-rc",
    "description": "Re-implemented Official Document site of BootStrap & FontAwesome based on WebCell, BootCell & MarkCell",
    "dependencies": {
        "@nuintun/qrcode": "^3.0.1",
        "boot-cell": "^1.0.1",
        "bootstrap-icons": "^1.0.0",
        "cell-router": "^2.0.0",
        "classnames": "^2.2.6",
        "github-web-widget": "^3.0.0-beta.5",
        "iterable-observer": "^1.0.0-beta.5",
        "koajax": "^0.6.2",
        "lodash.groupby": "^4.6.0",
        "markdown-ime": "^1.0.3",
        "marked": "^1.1.1",
        "turndown": "^6.0.0",
        "turndown-plugin-gfm": "^1.0.2",
        "web-cell": "^2.2.0",
        "web-utility": "^1.8.0"
    },
    "devDependencies": {
        "@octokit/types": "^5.4.1",
        "@types/classnames": "^2.2.10",
        "@types/lodash.groupby": "^4.6.6",
        "husky": "^4.2.5",
        "less": "^3.12.2",
        "lint-staged": "^10.3.0",
        "mark-cell": "^0.4.4",
        "parcel": "^1.12.4",
        "postcss-modules": "^3.2.2",
        "prettier": "^2.1.1",
        "typescript": "^4.0.2",
        "workbox-cli": "^4.3.1"
    },
    "prettier": {
        "singleQuote": true,
        "trailingComma": "none",
        "arrowParens": "avoid",
        "tabWidth": 4
    },
    "lint-staged": {
        "*.{html,md,mdx,less,json,yml,ts,tsx}": [
            "prettier --write"
        ]
    },
    "postcss": {
        "modules": true
    },
    "scripts": {
        "test": "lint-staged",
        "pack-mdx": "rm -rf document/dist/  &&  mark-cell document/source -p web-cell -f createCell",
        "pack-tsx": "parcel build source/index.html --public-url .",
        "build": "npm run pack-mdx  &&  rm -rf dist/  &&  npm run pack-tsx  &&  workbox generateSW",
        "start": "npm run pack-mdx  &&  workbox generateSW  &&  parcel source/index.html --open"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm test",
            "pre-push": "npm run build"
        }
    }
}
